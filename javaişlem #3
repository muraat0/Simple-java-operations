// Bu program sayesinde ortalama hesabı yapabilirsiniz



package projeler;

import java.util.Scanner;

public class işlem3
{

    public static void main(String [] args)
    {
        System.out.println("Bu program sayesinde ortalama hesaplayabilirsiniz");
       Scanner giris = new Scanner(System.in);
       System.out.println("Kaç sayı gireceksin?");
       int n = giris.nextInt();
       System.out.println(+n+ " tane sayının ortalamasını alacağız, lütfen aşağıya sayı değeri gir.");

       int toplam = 0;

       for (int i = 1; i <=n; i++)
       {
        System.out.println("Sayı gir: ");
        int sayi = giris.nextInt();
        toplam += sayi;

       }
       // Ortalama hesaplama
        int ort = toplam/n;
        System.out.println("Ortalama değer: " + ort);

    }
}
